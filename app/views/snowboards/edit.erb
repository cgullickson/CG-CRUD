<h1>Edit Snowboard</h1>

<form action="/snowboards/<%= @snowboard.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">

  <input type="text" class="form-control" name="name" value="<%= @snowboard.name %>">
  <input type="text" class="form-control" name="brand" value="<%= @snowboard.brand %>">
  <input type="text" class="form-control" name="price" value="<%= @snowboard.price %>">
  <input type="text" class="form-control" name="description" value="<%= @snowboard.description %>">
  <input type="text" class="form-control" name="contact" value="<%= @snowboard.contact %>">

  <input type="submit" class="btn btn-primary" value="submit" id="submit">
</form>
